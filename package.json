{
  "name": "wapichan-map",
  "version": "1.0.0",
  "description": "Map of Wapichan monitoring points",
  "main": "index.js",
  "dependencies": {
    "choo": "^7.0.0",
    "choo-devtools": "^3.0.1",
    "date-fns": "^1.28.5",
    "firestore-parser": "^0.8.9",
    "mapbox-gl": "^1.2.1",
    "nanocomponent": "^6.5.2",
    "nanomorph": "^5.1.3",
    "normalize.css": "^8.0.1",
    "object-assign": "^4.1.1",
    "sheetify": "^8.0.0",
    "split-require": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babelify": "^10.0.0",
    "browser-pack-flat": "^3.4.2",
    "browserify": "^16.5.0",
    "budo": "^11.6.3",
    "copyfiles": "^2.1.1",
    "css-extract": "^1.3.0",
    "envify": "^4.1.0",
    "gzipper": "^2.10.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^3.0.0",
    "standard": "^14.1.0",
    "uglify-js": "^3.6.0",
    "uglifyify": "^5.0.2",
    "unassertify": "^2.1.1",
    "workbox-cli": "^2.0.1"
  },
  "scripts": {
    "start": "budo index.js:bundle.js --live -P -d static  -- --transform-key=development",
    "lint": "standard",
    "test": "yarn lint && yarn test-deps",
    "test-deps": "dependency-check . && dependency-check . --extra --no-dev -i normalize.css",
    "build": "rimraf dist && mkdirp dist && yarn build:js && yarn build:static && workbox generate:sw && yarn build:compress",
    "build:js": "NODE_ENV=production browserify index.js -g unassertify -g uglifyify --transform-key=production -p [ css-extract -o dist/bundle.css ] -p [ split-require --out 'uglifyjs -c -m > dist/%f' --public / ] -p browser-pack-flat | uglifyjs -c -m -o dist/bundle.js",
    "build:static": "copyup 'static/**/*' dist",
    "build:compress": "gzipper dist -e png & gzipper dist -e png,jpg --brotli",
    "deploy": "aws s3 sync dist s3://mapeo-webmaps/public/"
  },
  "author": "Digital Democracy",
  "license": "MIT",
  "browserify": {
    "development": [
      "sheetify"
    ],
    "production": [
      "nanohtml",
      "sheetify",
      "envify",
      "unassertify",
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  },
  "browserslist": [
    "defaults"
  ]
}
